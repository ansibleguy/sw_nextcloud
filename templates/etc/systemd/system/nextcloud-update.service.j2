# {{ ansible_managed }}
# ansibleguy.sw_nextcloud

[Unit]
Description=Service to update dockerized NextCloud
Requires=docker.service
After=network.target
Documentation=https://github.com/ansibleguy/sw_nextcloud
StartLimitBurst=3

[Service]
Type=oneshot
ExecStart=/bin/bash /usr/local/sbin/nextcloud-update.sh
StandardOutput=journal
StandardError=journal
SyslogIdentifier=nextcloud-update
Restart=on-failure
RestartSec=60s

[Install]
WantedBy=multi-user.target
